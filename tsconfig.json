{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2019",
    "strict": true,
    "moduleResolution": "node",
    "outDir": "dist",
    "declaration": true,
    "noEmitOnError": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": false,
    "removeComments": false,
    "sourceMap": false,
    "allowJs": true,
    "lib": ["esnext", "dom"]
  },
  "include": [
    "src/**/*"
  ]
}
